<header class='top-page-header'>
    <%= link_to "SKILLMOVIE", "/", class:"skill-icon" %>
</header>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      SIGN UP
    </h1>
  </div>

  <%# <%= render 'shared/error_messages', model: f.object =%> 

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Nickname</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) 太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Email</label>
      <span class="indispensable">Required Field</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>


 <%if @sns_id.present? %>
   <%= hidden_field_tag :sns_auth, true %>
 <% else %>
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password</label>
      <span class="indispensable">Required Field</span>
    </div>
     <%= f.password_field :password, autocomplete: "new-password", class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
     <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
   </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password(confirmation)</label>
      <span class="indispensable">Required Field</span>
    </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
 <% end %>



  <div class='register-btn'>
    <%= f.submit "SignUp" ,class:"register-red-btn" %>
  </div>


  <div class="other-reg">
  <%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class: "login"%><br />
  <% end %>
   <%= link_to 'Facebookで登録', user_facebook_omniauth_authorize_path, method: :post, class: "facebook" %>
   <%= link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, method: :post, class: "google" %>
  </div>
</div>
<% end %>
<%= render "shared/footer" %>

