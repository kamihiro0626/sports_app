<%= render "shared/header" %>  
  
  <%# 投稿一覧 %>
  <div class='post-contents'>
    <h2 class='title'>ピックアップカテゴリー</h2>
    <%= link_to '新規投稿', "#", class: "subtitle" %>
    <ul class='post-lists'>
     <% @posts.each do |post| %> 
      <li class='list'>
        <%= link_to post.movie_url.to_s do %>
        <div class='post-img-content'>
          <%= video_tag post.movie.to_s, class: "post-img" %>
        </div>
        <div class='post-info'>
          <h3 class='post-title'>
            <%= post.title %>
          </h3>
            <div class='star-btn'>
              <%# <%= image_tag "star.png", class:"star-icon" %> 
              <span class='star-count'>0</span>
            </div>
        </div>
        <% end %>
      </li>
    <% end %>
    </ul>
  </div>
  <%# //投稿一覧 %>
</div>
<div class='post-btn'>
  <a href="/posts/new">
  <span class='post-btn-text'>投稿する</span>
  </a>
    <%# <%= image_tag 'camera.png' , size: '185x50' ,class: "purchase-btn-icon" %> 

</div>
